# Server Configuration
PORT=5000
NODE_ENV=development

# Logging & Privacy Configuration
LOG_LEVEL=info
# Set to 'true' to log IP addresses in error logs (privacy consideration)
ENABLE_IP_LOGGING=false
# Set to 'true' to enable full audit mode (logs full user IDs and IPs for security auditing)
# Only enable when required for security investigations
ENABLE_AUDIT_MODE=false

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/majisa?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRE=7d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Redis (Optional - for background jobs)
REDIS_URL=redis://localhost:6379

# Frontend URL
FRONTEND_URL=http://localhost:5173

# reCAPTCHA (if using)
RECAPTCHA_SITE_KEY=your-site-key
RECAPTCHA_SECRET_KEY=your-secret-key
